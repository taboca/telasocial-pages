function start() { 
  if(document.location.toString().indexOf("mode")>-1) { 
    var param = document.location.toString().split("mode=");
    if(param[1]=="tv") {
	tv.add($('#animation li'));
	tv.tickMode = true;
	tv.play();
	$('#linktela').html('Visite o site');
	$('#linktela').attr('href','index.html');
	$('#buttontela').removeClass('button-blue');
    } 
  }
}
</script>
